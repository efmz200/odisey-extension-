{
    "name": "Odissey",
    "description": "music ext",
    "version": "0.0.1",
    "manifest_version": 2,
    "omnibox": { "keyword" : "@Odissey" },
    "icons":{
        "16":"logo192.png",
        "32":"logo192.png",
        "48":"logo192.png",
        "128":"logo192.png"
    },
    "background":{
        "scripts":["./background.js"]
    },
    "browser_action":{
        "default_popup":"popup.html"
    },
    "content_security_policy": "script-src 'self' https://sdk.scdn.co/spotify-player.js; object-src 'self'",
    "permissions":[
        "tabs",
        "http://localhost:8888/*",
        "http://localhost:5000/*",
        "http://localhost:5001/*",
        "https://localhost:5001/*",
        "storage",
        "<all_urls>",
        "identity",
        "identity.email"
    ]
}