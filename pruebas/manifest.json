{
    "name": "Odyssey Music",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "description": "A Chromium extension to display a video and some buttons.",
    "omnibox": { "keyword" : "Odyssey" },
    "icons": {
        "16": "imgs/16x16.jpg",
        "32": "imgs/32x32.jpg",
        "48": "imgs/48x48.ico",
        "128": "imgs/128x128.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["popup/popup.html"]
      },
    "browser_action": {
        "default_popup": "popup/popup.html"
    }
}